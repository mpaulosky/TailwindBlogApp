@code {

	[Parameter] public ObjectId Id { get; set; } = ObjectId.Empty;

	private ArticleDto? _model;

	private bool _isLoading = true;

	private bool _isSubmitting;

	private string? _errorMessage;

	protected override async Task OnInitializedAsync()
	{

		await LoadArticle();

	}

	private async Task LoadArticle()
	{

		_isLoading = true;

		var article = await ArticleService.GetAsync(Id);

		if (article.Success)
		{

			_model = article.Value.Adapt<ArticleDto>();

			_isLoading = false;
			StateHasChanged();

		}
		else
		{
			_model = null;
			_errorMessage = article.Error;
			_isLoading = false;

		}

	}

	private async Task HandleValidSubmit()
	{

		_isSubmitting = true;
		_errorMessage = null;

		try
		{

			var result = await ArticleService.UpdateAsync(_model);

			if (result.Success)
			{
				NavigationManager.NavigateTo("/articles");
			}
			else
			{
				_errorMessage = result.Error;
			}

		}
		finally
		{

			_isSubmitting = false;
			StateHasChanged();

		}

	}

}